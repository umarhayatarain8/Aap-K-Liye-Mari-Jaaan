    <audio id="pleaseSound" src="https://www.soundjay.com/human/sounds/woman-please-1.mp3"></audio>
    <audio id="thankYouSound" src="https://www.soundjay.com/human/sounds/thank-you-1.mp3"></audio>

    <script>
        function loveResponse(answer) {
            hideAll();
            if (answer) {
                document.getElementById('loveResponse').style.display = 'block';
                document.getElementById('thankYouSound').play();
            } else {
                document.getElementById('pleaseThinkAgain').style.display = 'block';
            }
        }

        function finalPlea() {
            hideAll();
            document.getElementById('finalPlea').style.display = 'block';
        }

        function lastChance() {
            hideAll();
            document.getElementById('lastChance').style.display = 'block';
        }

        function hideAll() {
            document.getElementById('initialQuestion').style.display = 'none';
            document.getElementById('loveResponse').style.display = 'none';
            document.getElementById('pleaseThinkAgain').style.display = 'none';
            document.getElementById('finalPlea').style.display = 'none';
            document.getElementById('lastChance').style.display = 'none';
        }

        function moveButton(event) {
            var button = document.getElementById('finalNoButton');
            var container = document.querySelector('.container');
            var rect = container.getBoundingClientRect();
            var buttonRect = button.getBoundingClientRect();

            var maxX = rect.width - buttonRect.width;
            var maxY = rect.height - buttonRect.height;

            var newX = Math.random() * maxX;
            var newY = Math.random() * maxY;

            button.style.position = 'absolute';
            button.style.left = newX + 'px';
            button.style.top = newY + 'px';
            button.style.transition = 'all 0.3s ease';

            document.getElementById('pleaseSound').play();
        }

        function moveButtonMobile(event) {
            event.preventDefault();
            moveButton(event);
        }
    </script>
